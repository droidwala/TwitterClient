<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="TweetTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/dialog_text</item>
        <item name="android:windowBackground">@drawable/alertdialog_bg</item>
        <item name="fontPath">fonts/Montserrat-Light.otf</item>
    </style>

</resources>
